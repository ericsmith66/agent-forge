<dialog id="<%= @id %>" class="modal">
  <div class="modal-box">
    <% if title? %>
      <h3 class="font-bold text-lg"><%= title %></h3>
    <% end %>
    
    <div class="py-4">
      <%= content %>
    </div>

    <div class="modal-action">
      <% if footer? %>
        <%= footer %>
      <% end %>
      <form method="dialog">
        <button class="btn">Close</button>
      </form>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
